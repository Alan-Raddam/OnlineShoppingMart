<%=render "header" %>
<!-- ::::::  Start  Breadcrumb Section  ::::::  -->
<div class="page-breadcrumb">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <ul class="page-breadcrumb__menu">
          <li class="page-breadcrumb__nav"><a href="#">Home</a></li>
          <li class="page-breadcrumb__nav active">Login</li>
        </ul>
      </div>
    </div>
  </div>
</div> <!-- ::::::  End  Breadcrumb Section  ::::::  -->

<!-- ::::::  Start  Main Container Section  ::::::  -->
<main id="main-container" class="main-container">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="section-content m-b-40">
          <h5 class="section-content__title text-center">用户账户</h5>
        </div>
      </div>
      <!-- Start Login Area -->
      <% if resource.errors.any? %>
        <div class="col-12">
          <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close fa-pull-right" data-dismiss="alert"
                    aria-hidden="true">
              &times;
            </button>
            <% message = resource.errors.full_messages.first %>
            <% if message == 'Email has already been taken' %>
              该电子邮箱地址已经被占用
            <% else %>
              <%= message %>
            <% end %>
          </div>
        </div>
      <% end %>

      <div class="col-lg-4 col-12">

        <img src="/assets/img/company-logo/user.svg" class="img-responsive" alt="Logo">

      </div>
      <div class="col-lg-8 col-12">
        <div class="login-form-container">
          <h5 class="sidebar__title">注册</h5>
          <div class="login-register-form">
            <form action="/users" accept-charset="UTF-8" method="post">
              <div class="form-box__single-group">
                <label for="form-uregister-sername-email">电子邮箱 *</label>
                <input type="email" name="user[email]" id="form-uregister-sername-email" placeholder="输入邮箱" required>
              </div>
              <div class="form-box__single-group">
                <label for="form-register-username">姓名 *</label>
                <input type="text" id="form-register-username" name="user[name]" placeholder="输入您的姓名" required>
              </div>
              <div class="form-box__single-group">
                <label for="form-uregister-sername-email">电话 *</label>
                <input type="text" id="form-uregister-sername-tel" name="user[phone]" placeholder="输入手机号" required>
              </div>
              <div class="form-box__single-group m-b-20">
                <label for="form-register-username-password">密码 *</label>
                <div class="password__toggle">
                  <input type="password" name="user[password]" id="form-register-username-password" placeholder="输入注册密码。您可以点击右边的眼睛符号确认输入是否正确。" required>
                  <span data-toggle="#form-register-username-password" class="password__toggle--btn fa fa-fw fa-eye"></span>
                </div>
              </div>
              <button class="btn btn--box btn--small btn--radius btn--black btn--black-hover-red btn--uppercase font--semi-bold" type="submit">REGISTER</button>
            </form>
          </div>
        </div>
      </div>  <!-- End Login Area -->
    </div>
  </div>
</main> <!-- ::::::  End  Main Container Section  ::::::  -->
<%=render "footer" %>