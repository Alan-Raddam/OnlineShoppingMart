<%= render 'header_admin' %>

<div class="main-container">
  <div class="pd-ltr-20 xs-pd-20-10">
    <div class="min-height-200px">
      <div class="page-header">
        <div class="row">
          <div class="col-md-6 col-sm-12">
            <div class="title">
              <h4>编辑商品分类</h4>
            </div>
            <nav aria-label="breadcrumb" role="navigation">
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><%= link_to "管理后台", admin_path %></li>
                <li class="breadcrumb-item"><%= link_to "商品分类管理", product_type_path %></li>
                <li class="breadcrumb-item active" aria-current="page">编辑商品分类</li>
              </ol>
            </nav>
          </div>
          <div class="col-md-6 col-sm-12 text-right">
            <div class="dropdown">
              <a class="btn btn-secondary dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                January 2018
              </a>
              <div class="dropdown-menu dropdown-menu-right">
                <a class="dropdown-item" href="#">Export List</a>
                <a class="dropdown-item" href="#">Policies</a>
                <a class="dropdown-item" href="#">View Assets</a>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- Default Basic Forms Start -->


      <div class="pd-20 card-box mb-30">
        <div class="clearfix">
          <div class="pull-left">
            <h4 class="text-blue h4">编辑商品分类</h4>
          </div>
          <div class="pull-right">
            <input form="edit_product" type='submit' class="btn btn-primary btn--large scroll-click" rel="content-y" data-toggle="collapse" role="button">
          </div>
        </div>
        <form id='edit_product' enctype="multipart/form-data" action="/product_types/<%= @product_type.id %>" accept-charset="UTF-8" method="post">
          <div class="form-group row">
            <label class="col-sm-12 col-md-2 col-form-label">商品分类ID</label>
            <div class="col-sm-12 col-md-10">
              <input class="form-control" type="text" value="<%= @product_type.id %>" disabled="disabled">
            </div>
          </div>
          <input hidden="hidden" value="patch" name="_method">
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <div class="form-group row">
            <label class="col-sm-12 col-md-2 col-form-label">商品分类名称</label>
            <div class="col-sm-12 col-md-10">
              <input class="form-control" type="text" name='product_type[product_type_name]' value="<%= @product_type.product_type_name %>">
            </div>
          </div>
        </form>
      </div>
    </div>
    <!-- Input Validation End -->

    <div class="footer-wrap pd-20 mb-20 card-box">
      电子商务管理后台 2020Ruby大作业
      <a href="http://www.bootstrapmb.com/" target="_blank">By alangy</a>
    </div>


  </div>
  <%= render 'footer_admin' %>
</div>